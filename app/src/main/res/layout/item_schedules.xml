<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_margin="@dimen/_8sdp"
        style="?attr/materialCardViewFilledStyle"
        android:clickable="true"
        android:id="@+id/card_schedule"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/md_theme_light_inversePrimary"
        android:layout_height="@dimen/_100sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:id="@+id/rl_sideline"
                android:background="@color/md_theme_light_primary"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/rl_sideline"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_clock"></ImageView>

                <TextView
                    android:id="@+id/tv_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/nunito_medium"
                    android:text="10.00 - 12.00 WIB"
                    android:textColor="@color/md_theme_light_primary"
                    android:textSize="@dimen/_12sdp"></TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_detail1"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/nunito_medium"
                android:text="⦿ Detail 1"
                android:textColor="@color/md_theme_light_background"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toEndOf="@+id/rl_sideline"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"></TextView>
            <TextView
                android:id="@+id/tv_detail2"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/nunito_medium"
                android:text="⦿ Detail 2"
                android:textColor="@color/md_theme_light_background"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toEndOf="@+id/rl_sideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail1"></TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>