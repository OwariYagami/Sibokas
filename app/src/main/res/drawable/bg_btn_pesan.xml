<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_45sdp" />
            <solid android:color="@color/md_theme_light_onPrimaryContainer" /> <!-- Change the color as needed -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_45sdp" />
            <solid android:color="@color/md_theme_light_primary" /> <!-- Change the color as needed -->
        </shape>
    </item>
</selector>